# Application
APP_NAME=SmartWareX
APP_VERSION=1.0.0
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://smartwarex_user:smartwarex_pass@localhost:5432/smartwarex_db
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# ML Models
MODEL_DIR=models

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=

# Monitoring
ENABLE_METRICS=True
LOG_LEVEL=INFO
